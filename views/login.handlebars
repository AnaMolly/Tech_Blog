
<div>
  <p style="font-weight:200; letter-spacing:2px; padding: 10px 45px 45px 45px; text-align:center; font-size:60px">Please Login or Signup!</p>
</div>
<div class="row justify-content-center">
  <div class="login-card login-con">
    <p class="login-title">Login</p>
    <form class="form login-form">
      <div class="form-group">
        <label for="username-login">Username:</label>
        <input class="form-input" type="text" id="username-login" />
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary login-but" type="submit">LOGIN</button>
      </div>
    </form>
  </div>
  <div class="login-card login-con">
    <p class="login-title">Signup</p>
    <form class="form signup-form">
      <div class="form-group">
        <label for="username-signup">Username:</label>
        <input class="form-input" type="text" id="username-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary login-but" type="submit">SIGN UP</button>
      </div>
    </form>
  </div>
</div>


<script src="/js/login.js"></script>
