<ul class="post-list">
     {{#each posts as |post|}}
        <div class="card" style="width: 52rem; margin:40px 0px 40px 0px">
            <div class="card-body">
                <a href="/{{post.id}}"> <h5 class="card-title" id="{{post.id}}">{{post.post_title}}</h5></a> 
                <p class="card-text">{{post.post_content}}</p>
                <p>Created by <strong>{{user.username}}</strong> on <strong>{{format_date post.createdAt}}</strong> </p>
            </div>
        </div>
    {{/each}}
</ul>
